import os

from utils.tool import Tool

if __name__ == '__main__':
    tool = Tool('file.c GenDir CVarPrefix ...')

    c_file = tool.get_arg('file.c')
    gen_dir = tool.get_arg('GenDir')
    cvar_prefix = tool.get_arg('CVarPrefix')
    h_files = tool.get_arg('...')

    includes = ''
    embed_calls = ''

    for h in h_files:
        includes += '#include "{}"\n'.format(h)
        no_h = h[: -2]

        if os.path.isdir(os.path.join(gen_dir, no_h)):
            embed_calls += """\
    a__embed_addDir(&{prefix}{var});
""".format(prefix = cvar_prefix, var = tool.sanitizeFileNameForCVar(no_h))
        else:
            embed_calls += """\
    a__embed_addFile(&{prefix}{var});
""".format(prefix = cvar_prefix, var = tool.sanitizeFileNameForCVar(no_h))

    tool.writefile(c_file,
"""\
#include <a2x.h>
{}
void a__embed_application(void)
{{
{}}}
""".format(includes, embed_calls))
