import os

from utils.tool import Tool

if __name__ == '__main__':
    tool = Tool('SystemName')

    sys_name = tool.get_arg('SystemName').lower()

    sys_c = os.path.join('.', 'system_{}.c'.format(sys_name))
    sys_h = os.path.join('.', 'system_{}.h'.format(sys_name))

    for f in [sys_c, sys_h]:
        if os.path.exists(f):
            tool.output.error('{} already exists'.format(f))

    tool.writefile(sys_c,
"""\
#include "system_{name}.h"

void y_{name}(AEntity* Entity)
{{
    A_UNUSED(Entity);
}}
""".format(name = sys_name))

    tool.writefile(sys_h,
"""\
#pragma once

#include <a2x.h>

extern ASystemHandler y_{name};
""".format(name = sys_name))
