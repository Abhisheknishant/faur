import os
import time

from utils.tool import Tool

"""
category/a_sample.p.h
    #include "general/a_system_includes.h"
    #include "foo/a_bar.p.h"
    <public typedefs>
    #include "foo/a_bar.p.h"
    <public typedef implementations>
    <public api prototypes>
    <static inline functions>

category/a_sample.v.h
    #include "category/a_sample.p.h"
    <private typedefs>
    #include "foo/a_bar.v.h"
    <private typedef implementations>
    <private api prototypes>
    <static inline functions>

category/a_sample.c
    #include "a_sample.v.h"
    #include <faur.v.h>
    #include <system headers>
    <private types>
    <implementations>
"""

g_tool = Tool('Folder Name')

def main():
    pack_folder = g_tool.get_arg('Folder').lower().replace(' ', '_')
    pack_name = g_tool.get_arg('Name').lower().replace(' ', '_')

    pack_path = os.path.join(g_tool.dir_src, pack_folder)

    if not os.path.exists(pack_path):
        os.makedirs(pack_path)
    elif not os.path.isdir(pack_path):
        g_tool.out.error('{} is not a dir'.format(pack_path))

    pack_c = os.path.join(pack_path, 'a_{}.c'.format(pack_name))
    pack_ph = os.path.join(pack_path, 'a_{}.p.h'.format(pack_name))
    pack_vh = os.path.join(pack_path, 'a_{}.v.h'.format(pack_name))

    g_tool.check_files_not_exist(pack_c, pack_ph, pack_vh)

    author = '<your username>'

    for key in ['USER', 'USERNAME', 'LOGNAME']:
        if key in os.environ:
            author = os.environ[key]
            break

    header_guard = 'A_INC_{}_{}'.format(
        g_tool.sanitize_c_var(pack_folder).upper(),
        g_tool.sanitize_c_var(pack_name).upper())

    header_guard_p = header_guard + '_P_H'
    header_guard_v = header_guard + '_V_H'

    license_header = """\
/*
    Copyright {date} {author}
    This file is part of Faur, a C video game framework.

    This program is free software: you can redistribute it and/or modify
    it under the terms of the GNU General Public License version 3,
    as published by the Free Software Foundation.

    This program is distributed in the hope that it will be useful,
    but WITHOUT ANY WARRANTY; without even the implied warranty of
    MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
    GNU General Public License for more details.

    You should have received a copy of the GNU General Public License
    along with this program.  If not, see <http://www.gnu.org/licenses/>.
*/""".format(date = time.strftime('%Y'), author = author)

    g_tool.write_text(pack_c,
"""\
{header_comment}

#include "a_{name}.v.h"
#include <faur.v.h>

static void a_{name}__init(void)
{{
    //
}}

static void a_{name}__uninit(void)
{{
    //
}}

const APack a_pack__{name} = {{
    "{name}",
    {{
        [0] = a_{name}__init,
    }},
    {{
        [0] = a_{name}__uninit,
    }},
}};
""".format(header_comment = license_header, name = pack_name))

    g_tool.write_text(pack_ph,
"""\
{header_comment}

#ifndef {guard}
#define {guard}

#include "general/a_system_includes.h"

#endif // {guard}
""".format(header_comment = license_header, guard = header_guard_p))

    g_tool.write_text(pack_vh,
"""\
{header_comment}

#ifndef {guard}
#define {guard}

#include "{folder}/a_{name}.p.h"

#include "general/a_main.v.h"

extern const APack a_pack__{name};

#endif // {guard}
""".format(header_comment = license_header,
           guard = header_guard_v,
           folder = pack_folder,
           name = pack_name))

if __name__ == '__main__':
    main()
