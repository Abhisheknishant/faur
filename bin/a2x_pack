import os
import time

from utils.tool import Tool

"""
a2x_pack_sample.p.h
    <a2x_system_includes.h>
    <a2x_pack_*.p.h>
    <public typedefs>
    <a2x_pack_*.p.h>
    <public typedef implementations>
    <public api prototypes>
    <static inline functions>

a2x_pack_sample.v.h
    <a2x_pack_sample.p.h>
    <private typedefs>
    <a2x_pack_*.v.h>
    <private typedef implementations>
    <private api prototypes>
    <static inline functions>

a2x_pack_sample.c
    <a2x_pack_sample.v.h>
    <system headers>
    <a2x_pack_*.v.h>
    <private types>
    <implementations>
"""

if __name__ == '__main__':
    tool = Tool('PackName')

    pack_name = tool.get_arg('PackName').lower().replace(' ', '_')
    pack_c = os.path.join(tool.dir_src, 'a2x_pack_{}.c'.format(pack_name))
    pack_ph = os.path.join(tool.dir_src, 'a2x_pack_{}.p.h'.format(pack_name))
    pack_vh = os.path.join(tool.dir_src, 'a2x_pack_{}.v.h'.format(pack_name))

    for f in [pack_c, pack_ph, pack_vh]:
        if os.path.exists(f):
            tool.output.error('{} already exists'.format(f))

    author = '<your username>'

    for key in ['USER', 'USERNAME', 'LOGNAME']:
        if key in os.environ:
            author = os.environ[key]
            break

    license_header = """\
/*
Copyright {0} {1}
This file is part of a2x, a C video game framework.

This program is free software: you can redistribute it and/or modify
it under the terms of the GNU General Public License as published by
the Free Software Foundation, either version 3 of the License, or
(at your option) any later version.

This program is distributed in the hope that it will be useful,
but WITHOUT ANY WARRANTY; without even the implied warranty of
MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
GNU General Public License for more details.

You should have received a copy of the GNU General Public License
along with this program.  If not, see <http://www.gnu.org/licenses/>.
*/""".format(time.strftime('%Y'), author)

    tool.writefile(pack_c,
"""\
{0}

#include "a2x_pack_{1}.v.h"

void a_{1}__init(void)
{{
    //
}}

void a_{1}__uninit(void)
{{
    //
}}
""".format(license_header, pack_name))

    tool.writefile(pack_ph,
"""\
{0}

#pragma once

#include "general/a_system_includes.h"
""".format(license_header))

    tool.writefile(pack_vh,
"""\
{0}

#pragma once

#include "a2x_pack_{1}.p.h"

extern void a_{1}__init(void);
extern void a_{1}__uninit(void);
""".format(license_header, pack_name))
