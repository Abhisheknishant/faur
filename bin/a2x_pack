#!/usr/bin/env python3

import os
import sys
import time

def main():
    if len(sys.argv) != 2:
        print("Usage: {} pack_name".format(os.path.basename(sys.argv[0])))
        return

    bin_dir = os.path.dirname(__file__)
    src_dir = os.path.abspath(os.path.join(bin_dir, "..", "src"))

    if not os.path.exists(src_dir):
        print("Error: {} does not exist".format(src_dir))
        return

    print("Found a2x src: {}".format(src_dir))

    pack_name = sys.argv[1].strip().lower()

    pack_c = os.path.join(src_dir, "a2x_pack_{}.c".format(pack_name))
    pack_c = os.path.join(src_dir, "a2x_pack_{}.p.h".format(pack_name))
    pack_c = os.path.join(src_dir, "a2x_pack_{}.v.h".format(pack_name))

    for f in [pack_c, pack_ph, pack_vh]:
        if os.path.exists(f):
            print("Error: " + f + " already exists")
            return

    license_header = """/*
    Copyright {0} Alex Margarit

    This file is part of a2x-framework.

    a2x-framework is free software: you can redistribute it and/or modify
    it under the terms of the GNU Lesser General Public License as published by
    the Free Software Foundation, either version 3 of the License, or
    (at your option) any later version.

    a2x-framework is distributed in the hope that it will be useful,
    but WITHOUT ANY WARRANTY; without even the implied warranty of
    MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
    GNU Lesser General Public License for more details.

    You should have received a copy of the GNU Lesser General Public License
    along with a2x-framework.  If not, see <http://www.gnu.org/licenses/>.
*/
""".format(time.strftime('%Y'))

    def newfile(name, contents):
        print("Writing file: {}".format(name))

        with open(name, "w") as f:
            f.write("{}{}".format(license_header, contents))

    newfile(pack_c,
"""
#include "a2x_pack_{0}.v.h"

void a_{0}__init(void)
{{
    //
}}

void a_{0}__uninit(void)
{{
    //
}}
""".format(pack_name))

    newfile(pack_ph,
"""
#pragma once

#include "a2x_app_includes.h"

//
""")

    newfile(pack_vh,
"""
#pragma once

#include "a2x_pack_{0}.p.h"

extern void a_{0}__init(void);
extern void a_{0}__uninit(void);

//
""".format(pack_name))

    print("{} is ready!".format(pack_name))

if __name__ == "__main__":
    main()
