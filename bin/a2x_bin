import os

from utils.output import Output
from utils.tool import Tool

class BinTool(Tool):
    def main(self):
        bin_file = self.get_arg('File.bin')
        c_file = self.get_arg('File.c')
        h_file = self.get_arg('File.h')
        header_file = os.path.basename(h_file)
        prefix = self.get_arg('VariablePrefix')

        bin_file_name = os.path.basename(bin_file)
        bin_file_name_clean = bin_file_name.replace('.', '_')

        bin_data = ''
        bin_bytes = self.readbytes(bin_file)
        bin_size = len(bin_bytes)

        for index, byte in enumerate(bin_bytes):
            if index % 8 == 0:
                bin_data += '\n    '

            bin_data += '0x{:0>2x},'.format(byte)

        self.writefile(h_file, """\
#include <stddef.h>
#include <stdint.h>

extern const char* {prefix}_{name}_path;
extern size_t {prefix}_{name}_size;
extern uint8_t {prefix}_{name}_data[];
""".format(prefix = prefix,
           name = bin_file_name_clean))

        self.writefile(c_file, """\
#include "{header}"

const char* {prefix}_{name}_path = "{prefix}/{originalName}";

size_t {prefix}_{name}_size = {size};

uint8_t {prefix}_{name}_data[] = {{{data}
}};
""".format(header = header_file,
           prefix = prefix,
           name = bin_file_name_clean,
           originalName = bin_file_name,
           size = bin_size,
           data = bin_data))

if __name__ == '__main__':
    BinTool('File.bin File.c File.h VariablePrefix').run()
