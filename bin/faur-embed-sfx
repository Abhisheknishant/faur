import subprocess

from utils.tool import Tool

g_tool = Tool('Sound.wav GenFile.c/.h VarName')

def main():
    wav_file = g_tool.get_arg('Sound.wav')
    target_file = g_tool.get_arg('GenFile.c/.h')
    var_name = g_tool.sanitize_c_var(g_tool.get_arg('VarName'))

    if not wav_file.endswith('.wav'):
        g_tool.usage('Sound file must be a .wav file')

    if target_file.endswith('.h'):
        content = process_h(var_name)
    elif target_file.endswith('.c'):
        content = process_c(var_name, wav_file)
    else:
        g_tool.usage('GenFile must be a .c or .h file')

    g_tool.write_text(target_file, content)

def process_h(var_name):
    content = """\
//
// Generated by `{cmd}`
//
#include <faur.h>

extern const FSample* const f_sfx_{var};
""".format(cmd = g_tool.get_cmd(), var = var_name)

    return content

def process_c(var_name, wav_file):
    ret = subprocess.run(['ffmpeg',
                            '-loglevel', 'quiet',
                            '-i', wav_file,
                            '-ac', '1',
                            '-ar', '22050',
                            '-acodec', 'pcm_u8',
                            '-f', 'u8',
                            'pipe:1'],
                         stdout = subprocess.PIPE)

    if ret.returncode != 0:
        g_tool.out.error('ffmpeg error code {}'.format(ret.returncode))

    wavBytes = g_tool.read_bytes(wav_file)
    gbmBytes = ret.stdout

    def formatBytes(Bytes):
        return ', '.join(['0x{:0>2x}'.format(b) for b in Bytes])

    content = """\
//
// Generated by `{cmd}`
//
#include <faur.v.h>

#ifndef F__GEN_SFX_CONST
    #if F_CONFIG_LIB_SDL
        #define F__GEN_SFX_CONST
    #else
        #define F__GEN_SFX_CONST const
    #endif
#endif

#if F_CONFIG_SYSTEM_GAMEBUINO
    #define F__GEN_BUFFER_SIZE__{var} {bufferSizeGamebuino}
    #define F__GEN_BUFFER_DATA__{var} {bufferDataGamebuino}
#else
    #define F__GEN_BUFFER_SIZE__{var} {bufferSizeWav}
    #define F__GEN_BUFFER_DATA__{var} {bufferDataWav}
#endif

static const uint8_t f__sfx_buffer__{var}[F__GEN_BUFFER_SIZE__{var}] = {{F__GEN_BUFFER_DATA__{var}}};

static F__GEN_SFX_CONST FSample f__sfx_sample__{var} = {{
    F__GEN_BUFFER_SIZE__{var},
    f__sfx_buffer__{var},
    #if F_CONFIG_LIB_SDL
        NULL,
    #else
        (FPlatformSample*)&f__sfx_sample__{var},
    #endif
}};

const FSample* const f_sfx_{var} = (const FSample*)&f__sfx_sample__{var};
""".format(cmd = g_tool.get_cmd(),
           var = var_name,
           bufferSizeWav = len(wavBytes),
           bufferDataWav = formatBytes(wavBytes),
           bufferSizeGamebuino = len(gbmBytes),
           bufferDataGamebuino = formatBytes(gbmBytes))

    return content

if __name__ == '__main__':
    main()
