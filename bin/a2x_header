import os

from utils.output import Output
from utils.tool import Tool

class HeaderTool(Tool):
    def main(self):
        source_dir = os.path.abspath(self.get_arg('SourceDir'))
        header_file = os.path.abspath(self.get_arg('HeaderFile'))

        out = '#pragma once\n\n'

        headers = [h for h in os.listdir(source_dir) if h[-4 :] == '.p.h']
        headers.sort(key = lambda h: h)

        for h in headers:
            out += '#include "{}"\n'.format(os.path.join('..', 'src', h))

        self.writefile(header_file, out)

if __name__ == '__main__':
    tool = HeaderTool('SourceDir HeaderFile')
    tool.run()
