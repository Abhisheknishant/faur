import os

from utils.output import Output
from utils.tool import Tool

class HeaderTool(Tool):
    def main(self):
        source_dir = os.path.abspath(self.get_arg('SourceDir'))
        ext = self.get_arg('Extension')
        umbrella_header = os.path.abspath(self.get_arg('UmbrellaHeader'))

        if not os.path.isdir(source_dir):
            self.output.error('{} is not a dir'.format(source_dir))

        umbrella_header_dir = os.path.dirname(umbrella_header)
        path_prefix = os.path.relpath(source_dir, start = umbrella_header_dir)

        headers = [f for f in self.listdir(source_dir) if f.endswith(ext)]
        headers.sort(key = lambda h: h)

        out = '#pragma once\n\n'

        for h in headers:
            out += '#include "{}"\n'.format(os.path.join(path_prefix, h))

        self.writefile(umbrella_header, out)

if __name__ == '__main__':
    HeaderTool('SourceDir Extension UmbrellaHeader').run()
