import os
import re

from utils.tool import Tool

g_tool = Tool('UmbrellaHeader ...')
g_re_include = re.compile('^#include "((\w+/)+a_[\w_\.]+\.h)"$')
g_included_files = {}

def main():
    umbrella_header = os.path.abspath(g_tool.get_arg('UmbrellaHeader'))

    headers = g_tool.get_arg('...')
    headers.sort(key = lambda h: h)

    g_tool.check_files_exist(*headers)

    out = """\
#pragma once

//
// Generated by {} - not for humans
//

""".format(g_tool.name)

    out += ''.join([process_header(h, 0) for h in headers])

    g_tool.write_text(umbrella_header, out)

def process_header(file_name, depth):
    if file_name in g_included_files:
        return ''

    g_included_files[file_name] = True

    out = """\
//
// {} START ({})
//
""".format(file_name, depth)

    for line in g_tool.read_text_lines(file_name):
        include = g_re_include.match(line)

        if include:
            header = os.path.join(g_tool.dir_src, include.group(1))

            out += '// {}'.format(line)
            out += process_header(header, depth + 1)
        else:
            out += line

    out += """\
//
// {} END ({})
//
""".format(file_name, depth)

    return out

if __name__ == '__main__':
    main()
