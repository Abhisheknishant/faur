import os
import re

from utils.tool import Tool

if __name__ == '__main__':
    tool = Tool('SourceDir Extension UmbrellaHeader')

    h_dir = os.path.abspath(tool.get_arg('SourceDir'))
    ext = tool.get_arg('Extension')
    umbrella_header = os.path.abspath(tool.get_arg('UmbrellaHeader'))

    if not os.path.isdir(h_dir):
        tool.output.error('{} is not a dir'.format(h_dir))

    headers = [f for f in tool.listdir(h_dir) if f.endswith(ext)]
    headers.sort(key = lambda h: h)

    included = {}
    re_include = re.compile('^#include "(a2x_.*?\.h)"$')

    def process_header(FileName, Depth):
        if FileName in included:
            return ''

        included[FileName] = True

        out = """\
//
// {} START ({})
//
""".format(FileName, Depth)

        for line in tool.readtextlines(os.path.join(h_dir, FileName)):
            comment_line = False
            include = re_include.match(line)

            if include:
                header = include.group(1)

                if header.endswith('.v.h'):
                    tool.output.error('{} is a private header'.format(header))

                out += '// {}'.format(line)
                out += process_header(header, Depth + 1)
            elif line == '#pragma once\n':
                out += '// {}'.format(line)
            else:
                out += line

        out += """\
//
// {} END ({})
//
""".format(FileName, Depth)

        return out

    out = """\
#pragma once

//
// Generated by {} - not for humans
//

""".format(tool.name)

    out += ''.join([process_header(h, 0) for h in headers])

    tool.writefile(umbrella_header, out)
