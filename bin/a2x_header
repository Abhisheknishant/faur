import os
import re

from utils.tool import Tool

g_tool = Tool('UmbrellaHeader ...')

def main():
    umbrella_header = os.path.abspath(g_tool.get_arg('UmbrellaHeader'))

    headers = g_tool.get_arg('...')
    headers.sort(key = lambda h: h)

    g_tool.check_files_exist(*headers)

    included = {}
    re_include = re.compile('^#include "(\w+/a_[\w_\.]+\.h)"$')

    def process_header(FileName, Depth):
        if FileName in included:
            return ''

        included[FileName] = True

        out = """\
//
// {} START ({})
//
""".format(FileName, Depth)

        for line in g_tool.read_text_lines(FileName):
            include = re_include.match(line)

            if include:
                header = include.group(1)

                if header.endswith('.v.h'):
                    g_tool.out.error('{} is a private header'.format(header))

                out += '// {}'.format(line)
                out += process_header(
                        os.path.join(g_tool.dir_src, header), Depth + 1)
            elif line == '#pragma once\n':
                out += '// {}'.format(line)
            else:
                out += line

        out += """\
//
// {} END ({})
//
""".format(FileName, Depth)

        return out

    out = """\
#pragma once

//
// Generated by {} - not for humans
//

""".format(g_tool.name)

    out += ''.join([process_header(h, 0) for h in headers])

    g_tool.write_text(umbrella_header, out)

if __name__ == '__main__':
    main()
