#!/usr/bin/env python

import os, subprocess, sys

def main():
    if len(sys.argv) != 2:
        print("Usage: " + os.path.basename(sys.argv[0]) + " ProjectPath")
        return

    a2x_dir = os.path.abspath(sys.path[0])

    print("Found a2x: " + a2x_dir)

    project_path = sys.argv[1]
    project_name = os.path.basename(project_path)

    if os.path.exists(project_path):
        print("Error: " + project_name + " already exists")
        return

    def newdir(name):
        print("Making dir: " + name)
        os.mkdir(name)

    def newfile(name, contents):
        print("Writing file: " + name)

        with open(name, "w") as f:
            f.write(contents)

    newdir(project_path)
    newdir(project_path + "/make")
    newdir(project_path + "/src")

    newfile(project_path + "/make/Makefile",
"""APP = {0}
TARGET_DIR = ..
SRC_DIR = ../src
GFX_DIR =
SFX_DIR =
OBJ_DIR = ../obj
A2X_PATH = {1}/..
include $(A2X_PATH)/make/project/Makefile.linux
""".format(project_name, a2x_dir))

    newfile(project_path + "/src/main.c",
"""#include <a2x.h>

A_SETUP
{{
    a_settings_set("app.title", "{0}");
    a_settings_set("app.version", "1.0");
    a_settings_set("app.author", "{1}");
    a_settings_set("app.quiet", "no");
}}

A_MAIN
{{
    printf("Code me!\\n");
}}
""".format(project_name, os.getlogin()))

    print(project_name + " is ready!")

if __name__ == "__main__":
    main()
