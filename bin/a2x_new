import os

from utils.output import Output
from utils.tool import Tool

class NewTool(Tool):
    def main(self):
        project_path = self.get_arg('ProjectPath')
        project_name = os.path.basename(project_path)

        if os.path.exists(project_path):
            Output.error('Error: {} already exists'.format(project_name))

        self.makedir(project_path)
        self.makedir(os.path.join(project_path, 'make'))
        self.makedir(os.path.join(project_path, 'src'))

        self.writefile(os.path.join(project_path, 'make', 'Makefile'),
"""\
APP = {0}
TARGET_DIR = ..
SRC_DIR = ../src
GFX_DIR =
SFX_DIR =
OBJ_DIR = ../obj
A2X_PATH = {1}
include $(A2X_PATH)/make/project/Makefile.linux
""".format(project_name, self.a2x_dir))

        self.writefile(os.path.join(project_path, 'src', 'main.c'),
"""\
#include <a2x.h>

A_SETUP
{{
    a_settings_set("app.title", "{0}");
    a_settings_set("app.version", "1.0");
    a_settings_set("app.author", "{1}");
    a_settings_set("app.quiet", "no");
}}

A_MAIN
{{
    printf("Code me!\\n");
}}
""".format(project_name, os.getlogin()))

if __name__ == '__main__':
    tool = NewTool('ProjectPath')
    tool.run()
