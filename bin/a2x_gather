import os

from utils.tool import Tool

if __name__ == '__main__':
    tool = Tool('RootDir ...', '--no-dirs')

    files = []
    startRoot = os.path.abspath(tool.get_arg('RootDir'))

    if not os.path.isdir(startRoot):
        tool.usage('{} is not a dir'.format(startRoot))

    def scan_file(Root, File):
        filePath = os.path.join(Root, File)
        isDir = os.path.isdir(filePath)

        if isDir and tool.get_flag('--no-dirs'):
            scanned = []
        else:
            scanned = [os.path.relpath(filePath, start = startRoot)]

        if isDir:
            for f in tool.listdir(filePath):
                scanned += scan_file(filePath, f)

        return scanned

    for f in tool.get_arg('...'):
        files += scan_file(startRoot, f)

    print(' '.join(files))
