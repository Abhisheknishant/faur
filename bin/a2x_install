#!/bin/bash

A2X_BIN_DIR=$(readlink -f $(dirname $0))

if [ "$#" = "1" -a "$1" = "clean" ]
then
    COMMAND="clean"
else
    COMMAND=
    echo "Add $A2X_BIN_DIR to \$PATH"
    echo "Dependencies: SDL, SDL_mixer, libpng"
    echo "------------------------------------"
fi

cd $A2X_BIN_DIR/make/a2x
make $COMMAND

cd $A2X_BIN_DIR/tools/gfx
make $COMMAND

cd $A2X_BIN_DIR/tools/sfx
make $COMMAND

exit 0
