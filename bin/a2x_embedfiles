import os

from utils.output import Output
from utils.tool import Tool

class EmbedFilesTool(Tool):
    def scan_file(self, Root, File):
        filePath = os.path.join(Root, File)

        if os.path.isfile(filePath):
            return [os.path.relpath(filePath, start = self.root)]
        elif os.path.isdir(filePath):
            return [scannedFile
                        for f in os.listdir(filePath)
                            for scannedFile in self.scan_file(filePath, f)]
        else:
            self.output.error('{} is not a file'.format(filePath))

    def main(self):
        files = []
        self.root = os.path.abspath(self.get_arg('RootDir'))

        for f in self.get_arg_tail():
            files += self.scan_file(self.root, f)

        print(' '.join(files))

if __name__ == '__main__':
    EmbedFilesTool('RootDir').run()
