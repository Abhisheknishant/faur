include $(A2X_PATH)/make/global/defs
include $(A_FILE_SDKCONFIG_MK)

A_PLATFORM := caanoo

A_CONFIG_BUILD_LIB_SDL := 1
A_CONFIG_BUILD_SCREEN_FULLSCREEN := 1
A_CONFIG_BUILD_SCREEN_HEIGHT := 240
A_CONFIG_BUILD_SCREEN_WIDTH := 320
A_CONFIG_BUILD_SYSTEM_CAANOO := 1
A_CONFIG_BUILD_SYSTEM_LINUX := 1

CAANOO_SDK := $(A_SDK_CAANOO_ROOT)/$(A_SDK_CAANOO_TOOLCHAIN)

A_BUILD_LIBS := \
    -L$(A_SDK_CAANOO_ROOT)/lib/target \
    -L$(A_SDK_CAANOO_ROOT)/DGE/lib/target \
    -L$(CAANOO_SDK)/lib \
    -L$(CAANOO_SDK)/arm-gph-linux-gnueabi/lib \
    -lpng12 \
    -lz \
    -lSDL_mixer \
    -lsmpeg \
    -lSDL \
    -lpthread \
    -lm \
    -ldl \

A_BUILD_CFLAGS := \
    -O3 \
    -s \
    -march=armv5te \
    -mtune=arm9tdmi \
    -msoft-float \
    -ffast-math \
    -fomit-frame-pointer \
    -isystem$(A_SDK_CAANOO_ROOT)/include \
    -isystem$(A_SDK_CAANOO_ROOT)/DGE/include \
    -isystem$(A_SDK_CAANOO_ROOT)/DGE/include/SDL \
    -isystem$(CAANOO_SDK)/include \
    -isystem$(CAANOO_SDK)/arm-gph-linux-gnueabi/include \
    -Wno-conversion \

PREFIX := arm-gph-linux-gnueabi-

export PATH    := $(CAANOO_SDK)/bin:$(PATH)
export CC      := $(PREFIX)gcc
export CXX     := $(PREFIX)g++
export AS      := $(PREFIX)as
export AR      := $(PREFIX)ar
export OBJCOPY := $(PREFIX)objcopy
export READELF := $(PREFIX)readelf
export STRIP   := $(PREFIX)strip

include $(A2X_PATH)/make/global/rules
