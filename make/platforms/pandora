PLATFORM = pandora

PANDORA_SDK = $(PANDORA_ROOT)/$(PANDORA_TOOLCHAIN)
PANDORA_UTILS = $(PANDORA_ROOT)/$(PANDORA_SDKUTILS)

A_PLATFORM_LIBS = \
    -L$(PANDORA_SDK)/lib \
    -L$(PANDORA_SDK)/usr/lib \
    -L$(PANDORA_SDK)/arm-none-linux-gnueabi/lib \
    -lpng12 \
    -lz \
    -lSDL_mixer \
    -lmad \
    -lSDL \
    -lts \
    -lpthread \
    -lm \
    -ldl \

A_PLATFORM_CFLAGS = \
    -DA_PLATFORM_LINUX=1 \
    -DA_PLATFORM_PANDORA=1 \
    -DA_CONFIG_LIB_SDL=1 \
    -DA_CONFIG_RENDER_SOFTWARE=1 \
    -O3 \
    -s \
    -march=armv7-a \
    -mcpu=cortex-a8 \
    -mtune=cortex-a8 \
    -mfpu=neon \
    -mfloat-abi=softfp \
    -ffast-math \
    -fsingle-precision-constant \
    -ftree-vectorize \
    -fomit-frame-pointer \
    -I$(PANDORA_SDK)/include \
    -I$(PANDORA_SDK)/usr/include \
    -I$(PANDORA_SDK)/usr/include/SDL \
    -I$(PANDORA_SDK)/arm-none-linux-gnueabi/include \
    -Wno-conversion \

A_PLATFORM_COMPILER_PEDANTIC = false

PREFIX := arm-none-linux-gnueabi-

export PATH    := $(PANDORA_SDK)/bin:$(PATH)
export CC      := $(PREFIX)gcc
export CXX     := $(PREFIX)g++
export AS      := $(PREFIX)as
export AR      := $(PREFIX)ar
export OBJCOPY := $(PREFIX)objcopy
export READELF := $(PREFIX)readelf
export STRIP   := $(PREFIX)strip
export LD      := $(PREFIX)ld
