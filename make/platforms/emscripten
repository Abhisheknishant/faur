PLATFORM = emscripten

A_PLATFORM_LIBS = \
    -s USE_SDL=1 \
    -s USE_ZLIB=1 \
    -s USE_LIBPNG=1 \

A_PLATFORM_CFLAGS = \
    -DA_PLATFORM_LINUX=1 \
    -DA_PLATFORM_EMSCRIPTEN=1 \
    -DA_CONFIG_LIB_SDL=1 \
    -DA_CONFIG_RENDER_SOFTWARE=1 \
    -O3 \
    -s TOTAL_MEMORY=67108864 \
    $(A_PLATFORM_LIBS) \
