PLATFORM = linux

LIBS = -lpng \
       -lm

CFLAGS = -DA_PLATFORM_LINUXPC=1 \
         -O0 \
         -g

# Uncomment to compile with SDL 1.2 instead of SDL 2
#USE_LIB_SDL1=1

ifdef USE_LIB_SDL1
    LIBS := $(shell sdl-config --libs) -lSDL_mixer $(LIBS)
    CFLAGS += $(shell sdl-config --cflags) -DA_USE_LIB_SDL=1
else
    LIBS := $(shell sdl2-config --libs) -lSDL2_mixer $(LIBS)
    CFLAGS += $(shell sdl2-config --cflags) -DA_USE_LIB_SDL=2
endif
