include $(A2X_PATH)/make/global/defs

A_PLATFORM := dev

A_CONFIG_BUILD_DEVICE_KEYBOARD := 1
A_CONFIG_BUILD_LIB_SDL ?= 2
A_CONFIG_BUILD_LIB_SDL_TIME := 1
A_CONFIG_BUILD_SYSTEM_DESKTOP := 1
A_CONFIG_BUILD_SYSTEM_LINUX := 1

ifeq ($(A_CONFIG_BUILD_LIB_SDL), 1)
    A_CONFIG_BUILD_LIB_SDL_CONFIG := sdl-config
else ifeq ($(A_CONFIG_BUILD_LIB_SDL), 2)
    A_CONFIG_BUILD_LIB_SDL_CONFIG := sdl2-config
endif

A_BUILD_LIBS := \
    -lpng \
    -lm \
    -rdynamic \

A_BUILD_CFLAGS := \
    -O0 \
    -g \

include $(A2X_PATH)/make/global/rules

all : $(A2X_FILE_EDITOR_TAGS) $(A_FILE_SDKCONFIG_MK)

$(A_FILE_SDKCONFIG_MK) : $(A_FILE_SDKCONFIG_SRC) $(A2X_PATH)/bin/a2x_sdkconfig
	@ mkdir -p $(@D)
	@ $(A2X_PATH)/bin/a2x_sdkconfig $< $@

$(A_FILE_SDKCONFIG_SRC) :
	@ mkdir -p $(@D)
	@ $(A2X_PATH)/bin/a2x_sdkconfig $@
